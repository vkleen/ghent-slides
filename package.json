{
  "scripts": {
    "build:pdf": "marp src/slides.md -o dist/slides.pdf",
    "build:html": "marp src/slides.md -o dist/slides.html",
    "build": "yarn build:pdf && yarn build:html"
  },
  "dependencies": {
    "markdown-it-mermaid": "^0.2.5"
  },
  "devDependencies": {
    "@marp-team/marp-cli": "^2.3.0"
  },
  "marp": {
    "options": {
      "emoji": {
        "twemoji": {
          "base": "/res/twemoji/",
          "ext": "svg"
        }
      }
    }
  }
}
